
<svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Bottom block -->
  <rect x="20" y="60" width="60" height="20" fill="#00BFFF" stroke="#00FFFF" stroke-width="2" filter="url(#glow)"/>
  <rect x="25" y="65" width="10" height="10" fill="#0080CC"/>
  <rect x="40" y="65" width="10" height="10" fill="#0080CC"/>
  <rect x="55" y="65" width="10" height="10" fill="#0080CC"/>
  
  <!-- Middle block -->
  <rect x="30" y="40" width="40" height="20" fill="#FF00FF" stroke="#FF66FF" stroke-width="2" filter="url(#glow)" opacity="0.9"/>
  <rect x="35" y="45" width="8" height="8" fill="#CC00CC"/>
  <rect x="47" y="45" width="8" height="8" fill="#CC00CC"/>
  
  <!-- Top block -->
  <rect x="40" y="20" width="20" height="20" fill="#FFD700" stroke="#FFFF00" stroke-width="2" filter="url(#glow)" opacity="0.8"/>
  <rect x="43" y="25" width="6" height="6" fill="#CCB000"/>
  <rect x="51" y="25" width="6" height="6" fill="#CCB000"/>
  <rect x="43" y="33" width="6" height="6" fill="#CCB000"/>
  <rect x="51" y="33" width="6" height="6" fill="#CCB000"/>
  
  <!-- Construction lines -->
  <line x1="10" y1="90" x2="90" y2="10" stroke="#00FFFF" stroke-width="1" opacity="0.3" stroke-dasharray="2,2"/>
  <line x1="90" y1="90" x2="10" y2="10" stroke="#FF00FF" stroke-width="1" opacity="0.3" stroke-dasharray="2,2"/>
</svg>
